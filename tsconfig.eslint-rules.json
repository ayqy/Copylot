{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/eslint-rules",
    "rootDir": "./eslint-rules",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "eslint-rules/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
