{
  "name": "copylot-extension",
  "private": true,
  "version": "1.1.0",
  "description": "A browser extension to copy web page content as AI-friendly format",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run clean && npm run build:tests && BUILD_TARGET=development node --no-warnings=ExperimentalWarning --loader=ts-node/esm scripts/inline-build.ts",
    "build:prod": "npm run clean && BUILD_TARGET=production node --no-warnings=ExperimentalWarning --loader=ts-node/esm scripts/inline-build.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "type-check": "tsc --noEmit",
    "generate-icons": "node --no-warnings=ExperimentalWarning --loader=ts-node/esm scripts/generate-icons.ts",
    "publish": "node --no-warnings=ExperimentalWarning --loader=ts-node/esm scripts/publish.ts",
    "publish:cws": "node --no-warnings=ExperimentalWarning --loader=ts-node/esm scripts/chrome-webstore.ts",
    "clean": "rm -rf dist && rm -rf .tmp_build && rm -rf .tmp_build_prod",
    "apply": "ts-node scripts/apply-snapshots.ts",
    "build:tests": "ts-node scripts/build-test-manifest.ts"
  },
  "dependencies": {
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "undici": "^7.11.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.8",
    "@types/turndown": "^5.0.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-legacy": "^5.4.1",
    "chrome-webstore-upload": "^3.1.4",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "sharp": "^0.33.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.3.1",
    "diff": "*",
    "clipboardy": "*",
    "glob": "*",
    "@types/diff": "*"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "copilot",
    "copy",
    "markdown",
    "web-scraping",
    "content-extraction"
  ],
  "author": "Copylot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayqy/copy.git"
  },
  "bugs": {
    "url": "https://github.com/ayqy/copy/issues"
  },
  "homepage": "https://github.com/ayqy/copy#readme"
}